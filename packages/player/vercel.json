{
  "version": 2,
  "name": "ai-werewolf-player",
  "buildCommand": "bun run build",
  "devCommand": "bun run dev", 
  "installCommand": "bun install",
  "framework": null,
  "functions": {
    "api/*.ts": {
      "runtime": "@vercel/node@20.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/player/(.*)",
      "destination": "/api/index"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}